[
    // Coding
    {
        "key": "cmd+n",
        "command": "explorer.newFile",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+cmd+r",
        "command": "editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+i",
        "command": "editor.action.peekDefinition",
        "when": "editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "cmd+c i",
        "command": "inlineChat.start",
        "when": "editorFocus && inlineChatHasProvider && !editorReadonly"
    },
    {
        "key": "cmd+i",
        "command": "-inlineChat.start",
        "when": "editorFocus && inlineChatHasProvider && !editorReadonly"
    },

    // Tab navigation
    {
        "key": "ctrl+alt+left",
        "command": "workbench.action.navigateBack",
        "when": "canNavigateBack"
    },
    {
        "key": "ctrl+alt+right",
        "command": "workbench.action.navigateForward",
        "when": "canNavigateForward"
    },

    // # IDE Navigation
    {
        "key": "cmd+1",
        "command": "workbench.action.closeSidebar",
        "when": "sideBarVisible"
    },
    // ## General
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "!editorTextFocus"
    },
    {
        "key": "cmd+n",
        "command": "-workbench.action.files.newUntitledFile",
        "when": "!editorTextFocus || editorTextFocus && !editorHasCodeActionsProvider"
    },
    // ## Bottom Panel
    {
        "key": "cmd+[IntlBackslash]",
        "command": "workbench.action.terminal.toggleTerminal",
    },
    // ## Side Panel
    {
        "key": "cmd+1",
        "command": "workbench.view.explorer",
        "when": "!sideBarVisible" // since cmd+1 also used to close the sidebar
    },
    {
        "key": "cmd+2",
        "command": "workbench.view.debug",
    },
    {
        "key": "cmd+3",
        "command": "workbench.view.extension.todo-tree-container",
    },
    {
        "key": "cmd+4",
        "command": "workbench.panel.chatSidebar"
    },
    {
        "key": "cmd+5",
        "command": "workbench.debug.action.toggleRepl",
        // "when": "workbench.panel.repl.view.active"
    }
